{
  "name": "faceit-elo-calc",
  "displayName": "Faceit Elo Calculator",
  "version": "0.2.2",
  "description": "Show Elo Gain/Loss for Faceit Matches",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "eslint '{src,scripts}/**/*.{json,ts,js,vue}'"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@iconify/json": "^2.1.28",
    "@quasar/vite-plugin": "^1.0.9",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.0.1",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.2.33",
    "@vueuse/core": "^8.2.6",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.13.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.0.1",
    "kolorist": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "1.32.12",
    "typescript": "^4.6.3",
    "unplugin-auto-import": "^0.9.2",
    "unplugin-icons": "^0.14.1",
    "unplugin-vue-components": "^0.21.0",
    "vite": "^2.9.5",
    "vue": "^3.2.33",
    "vue-demi": "^0.13.1",
    "webext-bridge": "^5.0.4",
    "webextension-polyfill": "^0.9.0"
  },
  "dependencies": {
    "@quasar/extras": "^1.13.5",
    "quasar": "^2.6.6"
  }
}
