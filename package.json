{
  "name": "faceit-elo-calc",
  "displayName": "Faceit Elo Calculator",
  "version": "0.2.7",
  "description": "Show Elo Gain/Loss for Faceit Matches",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:ff": "cross-env NODE_ENV=production run-s clear build:web build:prepff build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:prepff": "esno scripts/prepare-firefox.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "rimraf extension.zip && jszip-cli add extension/* -o ./extension_ch-$DRONE_COMMIT_BRANCH-$DRONE_BUILD_NUMBER.zip",
    "pack:ff": "rimraf extension.zip && jszip-cli add extension/* -o ./extension_ff-$DRONE_COMMIT_BRANCH-$DRONE_BUILD_NUMBER.zip",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "lint": "eslint '{src,scripts}/**/*.{json,ts,js,vue}'"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.1",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.7.6",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/compiler-sfc": "^3.2.33",
    "@vueuse/core": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.0.1",
    "kolorist": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "1.54.4",
    "typescript": "^4.6.3",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.4",
    "vite": "^3.0.9",
    "vue": "^3.2.33",
    "vue-demi": "^0.13.8",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "echarts": "^5.3.3",
    "vite-plugin-package-version": "^1.0.2",
    "vue-echarts": "^6.2.3",
    "vue-material-design-icons": "^5.1.2"
  }
}
